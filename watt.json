{
  "$schema": "https://schemas.platformatic.dev/@platformatic/service/2.60.0.json",
  "service": {
    "openapi": true
  },
  "watch": {
    "ignore": ["cache/**/*", "*.db", "*.db-journal", "*.db-wal", "*.db-shm"]
  },
  "plugins": {
    "paths": [
      {
        "path": "./plugins",
        "encapsulate": false
      },
      "./routes"
    ]
  },
  "server": {
    "hostname": "{PLT_SERVER_HOSTNAME}",
    "port": "{PORT}",
    "logger": {
      "level": "{PLT_SERVER_LOGGER_LEVEL}"
    }
  }
}
